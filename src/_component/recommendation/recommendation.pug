- var sectionTitle = data.recommendation.sectionTitle
include ../section-title/section-title.pug 

.column(span="row" style=`margin-top:35px`)
  each rec in data.recommendation.rec 
    .recommendation
      .recommendation-data
        .rec-image
          img(class="imagine", src=`${rec.avatarPath}`, alt="")
        .rec-name=rec.name 
        .rec-role=rec.role
      .recommendation-description
        each p in rec.description 
          p=p

.column(span="row")
  button.disc__green
    .icon__arrow-down
