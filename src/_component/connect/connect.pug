- var sectionTitle = data.connect.sectionTitle
include ../section-title/section-title.pug

.column(span="row")
  .connect__image
.column(span="row" height="10")

each social, key in data.connect.socialList
    input.connect__radio(
      type="radio"
      name="connect__label"
      id=`connect__label--${key}`
    )
    label(for=`connect__label--${key}`).connect__disc
      i(class=`icon__${social.icon}`)
.column(span="row" height="10")
.column(span="row")
  .description-box__arrow
    .description-box__header
      .description-box__title CodeTap Academy
      .description-box__close
        input.connect__radio(
          type="radio"
          name="connect__label"
          id=`connect__label--reset`)
        .column(span="1")
        label(for=`connect__label--reset`).connect__disc
          i(class=`icon__cross`)
    .description-box__body 
      p.description-box__paragraph ipsum dolor sit amet, consectetur adipisicing elit. Totam commodi unde nostrum nesciunt ducimus, placeat id laudantium? Dignissimos mollitia aspernatur, ducimus quidem sed qui sint natus architecto magni, ut accusantium?
    .description-box__footer
      button.download-cv 
        i.icon__link
        span.text-button=data["about-me"].downloadButtonLabel

.column(span="row" height="10")
.column(span="row")
  button.disc-green   
    i.icon__arrow-down
.column(span="row" height="10")
